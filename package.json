{
  "name": "@boywithkeyboard/bytes",
  "version": "4.1.1",
  "author": "Samuel Kopp (https://samuelkopp.de)",
  "license": "Apache-2.0",
  "description": "A disk unit conversion library for JavaScript.",
  "funding": "https://github.com/sponsors/boywithkeyboard",
  "repository": "github:boywithkeyboard/bytes",
  "main": "./build/main.cjs",
  "module": "./build/main.mjs",
  "types": "./build/main.d.ts",
  "files": [
    "./build"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/main.d.ts",
        "default": "./build/main.mjs"
      },
      "require": {
        "types": "./build/main.d.ts",
        "default": "./build/main.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsc && esbuild main.ts --bundle --minify --format=esm --outfile=build/main.mjs && esbuild main.ts --bundle --minify --format=cjs --outfile=build/main.cjs",
    "prepublishOnly": "npm test",
    "test": "npm run build && node test.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
